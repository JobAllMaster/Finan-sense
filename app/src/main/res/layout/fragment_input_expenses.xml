<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg4"
    android:padding="16dp"
    android:gravity="center_vertical|center_horizontal"
    tools:context=".MainActivity">

    <!-- TextView 1 -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Please specify the amount of \n money you intend to withdraw"
        android:textAlignment="center"
        android:textColor="@color/silver"
        android:textSize="25dp"
        android:background="@drawable/bgd_design"
        android:padding="15dp"
        android:fontFamily="@font/anton"
        android:letterSpacing="0.02"
        android:paddingTop="20dp"
        android:layout_marginBottom="0dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="0dp">
        <!-- EditText -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/InputBudgetCurrent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            app:counterOverflowTextAppearance="@color/olive_green"
            android:layout_marginStart="5dp"
            android:textColorHint="@color/blue"
            android:layout_weight="1">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editText2"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:textColor="@color/olive_green"
                android:background="@drawable/custom_border_text"
                android:padding="10dp"
                android:fontFamily="@font/anton"
                android:ems="10"
                android:inputType="numberDecimal"
                android:imeOptions="actionDone" />

        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>


    <TextView
        android:id="@+id/textView5"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/anton"
        android:textAlignment="center"
        android:text="Description \n (used for/come from)"
        android:textColor="@color/black"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/budgetDesc"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:textColor="@android:color/black"
        android:background="@drawable/custom_border_text"
        android:layout_marginTop="10dp"
        android:hint="(From work, For bills)"
        android:textAlignment="center"
        android:padding="10dp"
        android:textColorHint="@color/blue"
        android:fontFamily="@font/anton"
        android:inputType="text"
        android:imeOptions="actionDone"
        />


    <!-- Button -->

    <!-- TextView 2 -->
    <TextView
        android:id="@+id/popuptext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Great! Let us handle the rest for you !!"
        android:textAlignment="center"
        android:textColor="#20b2aa"
        android:textSize="19sp"
        android:fontFamily="@font/anton"
        android:letterSpacing="0.02"
        android:layout_marginBottom="16dp" />

    <!-- Switch at the Bottom -->


    <Switch
        android:id="@+id/bottomSwitch"
        android:layout_width="wrap_content"
        android:layout_height="50dp"

        android:fontFamily="@font/anton"
        android:paddingLeft="10dp"
        android:paddingRight="5dp"
        android:text="Switch to Account Finances   "
        android:textColor="@color/silver"
        android:textSize="20dp"
        android:background="@drawable/bgd_design"
        android:thumb="@drawable/switch_thumb"
        android:track="@drawable/switch_track" />



</LinearLayout>
